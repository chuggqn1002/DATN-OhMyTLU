<div class="d-flex justify-content-center align-items-center">
    <div class="register-container">
        <h5 class="mb-2">Register</h5>
        <p class="text-muted">Register to continue to OhMyTLU.</p>
        <form id="registerForm" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-left">
                <label asp-for="Name" class="control-label">Name</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-user"></i></span>
                    </div>
                    <input asp-for="Name" id="name" class="form-control" placeholder="Enter Username" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="Email" class="control-label">Email</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                    </div>
                    <input asp-for="Email" id="email" class="form-control" placeholder="Enter Email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="Password" class="control-label">Password</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    </div>
                    <input asp-for="Password" id="password" type="password" class="form-control" placeholder="Enter Password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-left">
                <label asp-for="ConfirmPassword" class="control-label">ConfirmPassword</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    </div>
                    <input asp-for="ConfirmPassword" id="confirmpassword" type="password" class="form-control" placeholder="Enter ConfirmPassword" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Register" class="btn btn-block" style="background-color: #EFA969 !important;" />
            </div>
        </form>
        <p class="mt-3 mb-0">Already have an account ? <a href="/Login">Log In now</a></p>
    </div>
</div>
